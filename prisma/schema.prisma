generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  firstName      String?
  secondName     String?
  email          String @unique
  password       String
  notes          Note[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Note {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  title          String
  description    String
  emailId        String 
  user           User    @relation(fields: [emailId], references: [email])
  updatedAt      DateTime  @updatedAt
  createdAt      DateTime  @default(now())
}